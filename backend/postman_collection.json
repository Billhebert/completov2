{
  "info": {
    "name": "OMNI Platform V3",
    "description": "Complete API collection for OMNI Platform V3 with all 18 modules",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "companyId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/api/v1/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"companyName\": \"Acme Inc\",\n  \"companyDomain\": \"acme\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.success && response.data.accessToken) {",
                  "    pm.collectionVariables.set('token', response.data.accessToken);",
                  "    pm.collectionVariables.set('companyId', response.data.user.companyId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/api/v1/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@demo.omni.com\",\n  \"password\": \"admin123\"\n}"
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/v1/auth/me"
          }
        },
        {
          "name": "Enable 2FA",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/api/v1/auth/2fa/enable"
          }
        }
      ]
    },
    {
      "name": "Files",
      "item": [
        {
          "name": "Upload File",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/v1/files/upload",
            "body": {
              "mode": "formdata",
              "formdata": [
                {"key": "file", "type": "file", "src": ""},
                {"key": "entityType", "value": "contact", "type": "text"},
                {"key": "entityId", "value": "", "type": "text"}
              ]
            }
          }
        },
        {
          "name": "List Files",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/v1/files"
          }
        },
        {
          "name": "Get File URL",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/v1/files/:id/url"
          }
        },
        {
          "name": "Upload Avatar",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/v1/files/avatar",
            "body": {
              "mode": "formdata",
              "formdata": [
                {"key": "avatar", "type": "file", "src": ""}
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Search",
      "item": [
        {
          "name": "Global Search",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {
              "raw": "{{baseUrl}}/api/v1/search?q=john&type=contacts&limit=10",
              "query": [
                {"key": "q", "value": "john"},
                {"key": "type", "value": "contacts"},
                {"key": "limit", "value": "10"}
              ]
            }
          }
        },
        {
          "name": "Autocomplete",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {
              "raw": "{{baseUrl}}/api/v1/search/suggest?q=joh&limit=5",
              "query": [
                {"key": "q", "value": "joh"},
                {"key": "limit", "value": "5"}
              ]
            }
          }
        },
        {
          "name": "Recent Searches",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/v1/search/recent"
          }
        }
      ]
    },
    {
      "name": "Webhooks",
      "item": [
        {
          "name": "Create Subscription",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/api/v1/webhooks/subscriptions",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"url\": \"https://your-app.com/webhook\",\n  \"events\": [\"deal.won\", \"contact.created\"],\n  \"description\": \"My webhook\"\n}"
            }
          }
        },
        {
          "name": "List Subscriptions",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/v1/webhooks/subscriptions"
          }
        },
        {
          "name": "Get Deliveries",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/v1/webhooks/deliveries"
          }
        },
        {
          "name": "Test Webhook",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/v1/webhooks/test/:id"
          }
        }
      ]
    },
    {
      "name": "API Keys",
      "item": [
        {
          "name": "Create API Key",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/api/v1/apikeys",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Production API Key\",\n  \"scopes\": [\"contact.read\", \"deal.read\"],\n  \"expiresAt\": \"2025-12-31T23:59:59Z\"\n}"
            }
          }
        },
        {
          "name": "List API Keys",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/v1/apikeys"
          }
        },
        {
          "name": "Revoke API Key",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/v1/apikeys/:id/revoke"
          }
        },
        {
          "name": "Get Usage Stats",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/v1/apikeys/:id/usage"
          }
        }
      ]
    },
    {
      "name": "Audit",
      "item": [
        {
          "name": "Get Audit Logs",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {
              "raw": "{{baseUrl}}/api/v1/audit/logs?limit=50",
              "query": [
                {"key": "action", "value": "", "disabled": true},
                {"key": "entityType", "value": "", "disabled": true},
                {"key": "userId", "value": "", "disabled": true},
                {"key": "limit", "value": "50"}
              ]
            }
          }
        },
        {
          "name": "Get Entity History",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/v1/audit/history/contact/:entityId"
          }
        },
        {
          "name": "Get User Activity",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/v1/audit/activity/:userId"
          }
        },
        {
          "name": "Export Audit Logs",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/v1/audit/export"
          }
        }
      ]
    },
    {
      "name": "SSO",
      "item": [
        {
          "name": "Google - Get Auth URL",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/sso/google/authorize"
          }
        },
        {
          "name": "Microsoft - Get Auth URL",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/sso/microsoft/authorize"
          }
        },
        {
          "name": "GitHub - Get Auth URL",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/sso/github/authorize"
          }
        },
        {
          "name": "List OAuth Accounts",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/v1/sso/accounts"
          }
        }
      ]
    },
    {
      "name": "Email Templates",
      "item": [
        {
          "name": "List Templates",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/v1/email-templates"
          }
        },
        {
          "name": "Preview Template",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/api/v1/email-templates/preview",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"templateName\": \"welcome\",\n  \"variables\": {\n    \"name\": \"John Doe\",\n    \"companyName\": \"Acme Inc\"\n  }\n}"
            }
          }
        },
        {
          "name": "Send Templated Email",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/api/v1/email-templates/send",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"to\": \"john@example.com\",\n  \"templateName\": \"welcome\",\n  \"variables\": {\n    \"name\": \"John Doe\",\n    \"companyName\": \"Acme Inc\"\n  }\n}"
            }
          }
        }
      ]
    },
    {
      "name": "CRM",
      "item": [
