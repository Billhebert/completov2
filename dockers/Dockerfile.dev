FROM node:18-alpine

WORKDIR /app

# Instalar dependências do sistema
RUN apk add --no-cache python3 make g++

# Copiar package files
COPY package*.json ./
COPY prisma ./prisma/

# Instalar dependências
RUN npm install

# Gerar Prisma Client
RUN npx prisma generate

# Copiar código
COPY . .

# Expor porta
EXPOSE 5000

# Comando de desenvolvimento (será sobrescrito pelo docker-compose)
CMD ["npm", "run", "dev"]
