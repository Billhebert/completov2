// ============================================
// ERP/FINANCE - ADVANCED
// ============================================

model Payment {
  id          String   @id @default(uuid())
  companyId   String
  invoiceId   String?
  amount      Float
  currency    String   @default("USD")
  method      String   // credit_card, bank_transfer, etc
  provider    String?  // stripe, paypal, etc
  providerPaymentId String? // ID from payment provider
  providerData Json?   // Additional provider-specific data
  status      String   @default("pending")
  reference   String?
  paidAt      DateTime?
  refundedAt  DateTime?
  createdAt   DateTime @default(now())

  invoice     Invoice? @relation(fields: [invoiceId], references: [id])

  @@index([companyId])
  @@index([invoiceId])
  @@index([providerPaymentId])
  @@map("payments")
}

model RecurringInvoice {
  id          String   @id @default(uuid())
  companyId   String
  contactId   String
  amount      Float
  currency    String   @default("USD")
  frequency   String   // daily, weekly, monthly, yearly
  nextDate    DateTime
  endDate     DateTime?
  isActive    Boolean  @default(true)
  templateData Json
  createdAt   DateTime @default(now())

  @@index([companyId])
  @@map("recurring_invoices")
}

model PurchaseOrder {
  id          String   @id @default(uuid())
  companyId   String
  supplierId  String
  number      String?  // Alternative field name for orderNumber
  orderNumber String
  status      String   @default("draft")
  total       Float?   // Calculated total (can be derived from items)
  totalAmount Float
  currency    String   @default("USD")
  items       Json     // Array of items as JSON
  approvedById String?
  approvedAt  DateTime?
  receivedAt  DateTime?
  deliveryDate DateTime?
  notes       String?  @db.Text
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  supplier    Supplier @relation(fields: [supplierId], references: [id])

  @@index([companyId])
  @@index([supplierId])
  @@map("purchase_orders")
}

model TaxRule {
  id          String   @id @default(uuid())
  companyId   String
  name        String
  taxType     String?  // vat, sales_tax, gst, etc
  rate        Float
  country     String?
  state       String?
  jurisdiction String? // federal, state, municipal, etc
  applicableProductTypes String[] // Product types this tax applies to
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  @@index([companyId])
  @@index([jurisdiction])
  @@map("tax_rules")
}

model Subscription {
  id          String   @id @default(uuid())
  companyId   String   @unique
  contactId   String?  // Optional contact for subscription
  plan        String   // free, pro, enterprise
  status      String   @default("active")
  startDate   DateTime @default(now())
  endDate     DateTime?
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  cancelledAt DateTime?
  providerSubscriptionId String? // Stripe/PayPal subscription ID
  features    Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([providerSubscriptionId])
  @@map("subscriptions")
}

