model Folder {
  id          String   @id @default(uuid())
  companyId   String
  name        String
  parentId    String?
  path        String   // Full path for quick lookups
  createdById String
  deleted     Boolean  @default(false)
  deletedAt   DateTime?
  deletedById String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  parent      Folder?  @relation("FolderHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children    Folder[] @relation("FolderHierarchy")
  files       File[]
  createdBy   User     @relation("FolderCreatedBy", fields: [createdById], references: [id])
  deletedBy   User?    @relation("FolderDeletedBy", fields: [deletedById], references: [id])

  @@index([companyId])
  @@index([parentId])
  @@map("folders")
}

model FileVersion {
  id          String   @id @default(uuid())
  fileId      String
  version     Int
  size        Int
  url         String
  fileUrl     String?  // Alternative URL format
  filename    String?  // Original filename for this version
  mimeType    String?  // MIME type for this version
  uploadedById String
  createdAt   DateTime @default(now())

  file        File     @relation(fields: [fileId], references: [id], onDelete: Cascade)
  createdBy   User     @relation("FileVersionCreatedBy", fields: [uploadedById], references: [id])

  @@index([fileId])
  @@map("file_versions")
}

model FileShare {
  id          String   @id @default(uuid())
  fileId      String
  sharedById  String
  sharedWithId String?  // User ID or null for public
  permission  String   // read, write, admin
  expiresAt   DateTime?
  createdAt   DateTime @default(now())

  file        File     @relation(fields: [fileId], references: [id], onDelete: Cascade)

  @@index([fileId])
  @@index([sharedWithId])
  @@map("file_shares")
}

model FileComment {
  id          String   @id @default(uuid())
  fileId      String
  userId      String
  content     String   @db.Text
  mentions    String[] // User IDs mentioned in the comment
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  file        File     @relation(fields: [fileId], references: [id], onDelete: Cascade)
  createdBy   User     @relation("FileCommentCreatedBy", fields: [userId], references: [id])

  @@index([fileId])
  @@map("file_comments")
}

model FilePreview {
  id          String   @id @default(uuid())
  fileId      String   @unique
  thumbnailUrl String?
  previewUrl  String?
  previewType String   @default("image") // image, pdf, video, etc
  status      String   @default("pending")
  createdAt   DateTime @default(now())

  file        File     @relation(fields: [fileId], references: [id], onDelete: Cascade)

  @@map("file_previews")
}

// ============================================
// CHAT/OMNICHANNEL - ADVANCED
// ============================================

model Chatbot {
  id          String   @id @default(uuid())
  companyId   String
  createdById String?
  name        String
  description String?
  config      Json
  flow        Json?    // Chatbot flow definition
  trigger     Json?    // Trigger conditions
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdBy    User?   @relation("ChatbotCreatedBy", fields: [createdById], references: [id])
  interactions ChatbotInteraction[]
  states      ChatbotState[]

  @@index([companyId])
  @@index([createdById])
  @@map("chatbots")
}

model ChatbotState {
  id            String   @id @default(uuid())
  chatbotId     String
  conversationId String?
  name          String
  type          String   // question, action, end
  config        Json
  currentNodeId String?  // Current node in the flow
  variables     Json?    // State variables
  nextStates    String[] // IDs of possible next states
  createdAt     DateTime @default(now())

  chatbot       Chatbot  @relation(fields: [chatbotId], references: [id], onDelete: Cascade)

  @@index([chatbotId])
  @@index([conversationId])
  @@index([currentNodeId])
  @@map("chatbot_states")
}

model ChatbotInteraction {
  id            String   @id @default(uuid())
  chatbotId     String
  conversationId String
  userId        String?
  nodeId        String?  // Current node ID in the flow
  currentState  String
  userMessage   String?  @db.Text // User's message that triggered this interaction
  context       Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  chatbot       Chatbot  @relation(fields: [chatbotId], references: [id], onDelete: Cascade)

  @@index([chatbotId])
  @@index([conversationId])
  @@index([nodeId])
  @@map("chatbot_interactions")
}

model CannedResponse {
  id          String   @id @default(uuid())
  companyId   String
  title       String
  content     String   @db.Text
  shortcut    String?
  category    String?
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([companyId])
